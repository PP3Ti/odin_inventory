<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add a shoe to db</title>
</head>
<body>
  <h1>Add a shoe to the database</h1>
  <form action="/shoes/add" method="post">
    <label for="manufacturer">Manufacturer:</label>
    <input type="text" name="manufacturer" required>
    <br>
    <label for="name">Name:</label>
    <input type="text" name="name" required>
    <br>
    <fieldset>
      <label for="availableSizes">Available sizes</label>
      <br>
      <% for(let i = 0; i < sizes.length; i++) { %>
        <label for="availableSizes[<%= i %>][size]"> <%= sizes[i] %> </label>
        <input type="checkbox" name="availableSizes[<%= i %>][size]" value="<%= sizes[i] %>">
        <label for="stock">Stock:</label>
        <input type="number" name="availableSizes[<%= i %>][stock]" min="0">
        <br>
      <% } %>
    </fieldset>
    <label for="price">Price in eur:</label>
    <input type="number" step="0.01" name="price" value="0">
    <br>
    <button type="submit">add</button>
  </form>
  <a href="/shoes">
    <button>back</button>
  </a>
</body>
</html>