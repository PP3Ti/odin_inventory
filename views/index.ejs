<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Inventory</title>
</head>
<body>
  <h1>Overview</h1>
  <nav>
    <a href='/shoes'> <h4>Shoes</h4> </a>
    <a href='/crashpads'> <h4>Crashpads</h4> </a>
    <a href='/accessories'> <h4>Accessories</h4> </a>
  </nav>
  <a href='/shoes'> <h2>Shoes</h2> </a>
  <table>
    <thead>
      <tr>
        <th>Shoe</th>
        <th>Manufacturer</th>
        <th>Name</th>
        <th>Price</th>
        <th>Stock</th>
        <th>Value</th>
      </tr>
    </thead>
    <tbody>
      <% shoes.forEach(shoe => { %>
        <tr> 
          <td> <a href="/shoes/update/<%= shoe.id %>"> <%= shoe.manufacturer %> <%= shoe.name %> </a> </td>
          <td> <%= shoe.manufacturer %> </td>
          <td> <%= shoe.name %> </td>
          <td> <%= shoe.price %> </td>
          <td> <%= shoe.fullStock %> </td>
          <td> <%= Math.floor(shoe.fullStock * shoe.price) %> </td>
        </tr>
      <% }) %>
      <tr>
        <th>Total value</th>
        <th> <%= shoesSum %> </th>
      </tr>
    </tbody>
  </table>
  <a href='/crashpads'> <h2>Crashpads</h2> </a>
    <table>
      <thead>
        <th>manufacturer</th>
        <th>name</th>
        <th>price</th>
        <th>stock</th>
        <th>value</th>
      </thead>
      <tbody>
        <% crashpads.forEach(item => { %>
          <tr>
            <td> <%= item.manufacturer %> </td>
            <td> <%= item.name %> </td>
            <td> <%= item.price _%> € </td>
            <td> <%= item.stock %> </td>
            <td> <%= Math.floor(item.stock * item.price) _%> € </td>
          </tr>
        <% }) %>
        <tr>
          <th>Total value:</th>
          <th><%= crashpadSum _%> €</th>
        </tr>
      </tbody>
    </table>
  <a href='/accessories'> <h2>Accessories</h2> </a>
    <table>
      <thead>
        <th>manufacturer</th>
        <th>name</th>
        <th>price</th>
        <th>stock</th>
        <th>value</th>
      </thead>
      <tbody>
        <% accessories.forEach(item => { %>
          <tr>
            <td> <%= item.manufacturer %> </td>
            <td> <%= item.name %> </td>
            <td> <%= item.price _%> € </td>
            <td> <%= item.stock %> </td>
            <td> <%= Math.floor(item.stock * item.price) _%> € </td>
          </tr>
        <% }) %>
        <tr>
          <th>Total value:</th>
          <th><%= accessorySum _%> €</th>
        </tr>
      </tbody>
    </table>
</body>
</html>